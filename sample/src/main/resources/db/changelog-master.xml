<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="bh213">

        <createSequence sequenceName="cluster_tasks_id_seq" startValue="500" incrementBy="50"/>

        <createTable tableName="cluster_tasks">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="next_run" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="last_update" type="timestamp">
                <constraints nullable="false"/>
            </column>


            <column name="locked_by_instance_id" type="varchar(64)">
                <constraints nullable="true"/>
            </column>

            <column name="lock_time" type="timestamp">
            </column>

            <column name="task_class" type="varchar(256)">
                <constraints nullable="false"/>
            </column>


            <column name="status" type="varchar(16)">
                <constraints nullable="false"/>
            </column>

            <column name="retry_count" type="integer">
                <constraints nullable="true"/>
            </column>

            <column name="priority" type="integer">
                <constraints nullable="false"/>
            </column>


            <column name="input" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="input_class" type="varchar(256)">
                <constraints nullable="false"/>
            </column>


        </createTable>

        <createIndex indexName="cluster_tasks_primary"
                     tableName="cluster_tasks"
        >
            <column name="id"/>
            <column name="status"/>
            <column name="locked_by_instance_id"/>
            <column name="lock_time"/>
        </createIndex>


        <createSequence sequenceName="cluster_tasks_instances_seq" startValue="100" incrementBy="1"/>

        <createTable tableName="cluster_tasks_instances">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="instance_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_check_in" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="check_in_interval_milliseconds" type="int">
                <constraints nullable="false"/>
            </column>


        </createTable>


        <createTable tableName="test_task_table">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="instance_id" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
            <column name="done" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="retry1" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="retry2" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="retry3" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="expected_retries" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="error" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="log" type="varchar(4096)">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <createIndex indexName="test_task_table_primary"
                     tableName="test_task_table"
        >
            <column name="id"/>
        </createIndex>


    </changeSet>


</databaseChangeLog>